<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/pokemon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pokemon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidPokedexCompose"
        tools:targetApi="31">
        <activity
            android:name=".ui.activities.PokedexActivity"
            android:exported="false"
            android:theme="@style/Theme.AndroidPokedexCompose" />
        <activity
            android:name=".ui.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AndroidPokedexCompose">
            <meta-data
                android:name="android.activity.launchSourceSplashScreen"
                android:value="disabled" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>